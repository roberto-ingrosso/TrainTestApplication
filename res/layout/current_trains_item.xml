<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/current_trains_bkg_r"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/current_trains_item_info_row_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/current_trains_item_label_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_trains_item_label_r"
            android:textColor="#0f0"
            android:visibility="gone" />

        <TextView
            android:id="@+id/current_trains_item_label_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_trains_item_label_n"
            android:textColor="#f00"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/current_trains_item_info_row_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dip" />

    <TextView
        android:id="@+id/current_trains_item_info_row_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip" />

</LinearLayout>